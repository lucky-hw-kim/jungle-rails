<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
     <div class="alert alert-info alert-dismissible fade show">Receipt has been sent to <%= @order.email  %>
     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
    <br>

  <div class="panel panel-default items">
    <table class="table table-bordered" style="text-align:center;">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th style="white-space: nowrap">Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |item| %>
          <%= render 'item', product: item.product, quantity: item.quantity, price: item.item_price_cents / 100.0 %>
        <% end %>

      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

    <div class="order-summary bg-light p-5 rounded-lg m-1">
      <h3 style="text-align:center;">Thank you for shopping with us!</h3>
    </div>
    <br>
    <div class="d-grid gap-2">
    <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary ml-lg' %>
  </div>
</section>
