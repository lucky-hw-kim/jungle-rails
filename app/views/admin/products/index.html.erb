<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Products</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-success' %>
  </div>
  <br>
  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <%= tag.th 'Product' %>
          <%= tag.th 'Category' %>
          <%= tag.th 'Price' %>
          <%= tag.th 'Qty Remaining' %>
          <%= tag.th %>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>

  </div>

</section>
